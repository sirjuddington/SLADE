{
  "id": "hernhex",
  "name": "Heretic + Hexen",

  // Supported games
  "games": [ "heretic", "hexen" ],

  // Supported map formats
  "map_formats": [ "doom", "hexen" ],

  "configuration": {
    // Enable boom extensions
    "boom": true,
    "boom_sector_flag_start": 32,

    // Light levels
    "light_level_interval": 16,

    // Thing types
    "thing_types": {
      "import": [
        {
          // Heretic things
          "filter": { "game": "heretic" },
          "file": "include/thing_types/hernhex.json",
          "key": "heretic"
        },
        {
          // Hexen things
          "filter": { "game": "hexen" },
          "file": "include/thing_types/hernhex.json",
          "key": "hexen"
        }
      ]
    }
  }
}