{
  "id": "boom_mbf21",
  "name": "Boom + MBF21",

  // Supported games
  "games": [ "doom", "doom2", "chex1" ],

  // Supported map formats
  "map_formats": [ "doom" ],

  "configuration": {
    // Enable boom extensions
    "boom": true,
    "boom_sector_flag_start": 32,

    // Enable MBF21 extensions
    "mbf21": true,

    // Light levels
    "light_level_interval": 16,

    // Action specials
    "action_specials": {
      "import": [
        "include/action_specials/boom.json",
        "include/action_specials/mbf.json",
        "include/action_specials/mbf21.json"
      ]
    },

    // Thing types
    "thing_types": {
      "import": [
        "include/thing_types/boom.json",
        "include/thing_types/mbf.json"
      ]
    },

    // Thing flags
    "thing_flags": {
      "import": [
        "include/thing_flags/boom.json",
        "include/thing_flags/mbf.json"
      ]
    },

    // Line flags
    "line_flags": {
      "import": [
        "include/line_flags/boom.json",
        "include/line_flags/mbf21.json"
      ]
    },

    // UDMF properties
    "udmf_properties": {
      "import": [ "include/udmf_properties/boom.json" ]
    }
  }
}