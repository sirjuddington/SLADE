    // Defaults
    "defaults": {
      "sector": {
        "texturefloor": "MFLR8_1",
        "textureceiling": "MFLR8_1",
        "heightfloor": 0,
        "heightceiling": 128,
        "lightlevel": 160
      },
      "sidedef": {
        "texturetop": "STONE2",
        "texturemiddle": "STONE2",
        "texturebottom": "STONE2"
      },
      "thing": {
        "type": 1,
        "flags": 7,
        "udmf": {
          "skill1": true,
          "skill2": true,
          "skill3": true,
          "skill4": true,
          "skill5": true,
          "single": true,
          "dm": true,
