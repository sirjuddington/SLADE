    "line_flags": {
      "import": [ "include/line_flags/doom.json" ]
    },

    // Sector types
    "sector_types": {
      "import": [ "include/sector_types/doom.json" ]
    },

    // UDMF properties
    "udmf_properties": {
      "import": [ "include/udmf_properties/base.json" ]
