  "id": "doom",
  "name": "Doom (Ultimate)",

  // IWAD filename
  "iwad": "doom.wad",

  // Supported map formats
  "map_formats": [ "doom" ],

  // DECORATE filters
  "filters": [ "doom", "any" ],

  "configuration": {
    // Sky flat for 3d mode
    "sky_flat": "F_SKY1",

    // Light levels
    "light_level_interval": 16,

    // Maps
