    // Defaults
    "defaults": {
      "sector": {
        "texturefloor": "CASFL26",
        "textureceiling": "HFLATB",
        "heightfloor": 0,
        "heightceiling": 128,
        "lightlevel": 256
      },
      "sidedef": {
        "texturetop": "C29",
        "texturemiddle": "C29",
        "texturebottom": "C29"
      },
      "thing": {
